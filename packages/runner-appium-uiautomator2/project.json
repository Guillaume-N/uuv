{
  "name": "runner-appium-uiautomator2",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/runner-appium-uiautomator2/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/runner-appium-uiautomator2",
        "commands": [
          "npx tsc -p tsconfig.lib.json --rootDir src --outDir dist"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/runner-appium-uiautomator2/src/**/*.{ts,js,feature}"],
        "fix": true,
        "eslintConfig": "packages/runner-appium-uiautomator2/.eslintrc.json"
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "commitMessage": "release(runner-appium-uiautomator2): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "plugins": [
          [
            "@semantic-release/npm",
            {
              "npmPublish": false,
              "tarballDir": "dist/packages",
              "pkgRoot": "packages/runner-appium-uiautomator2"
            }
          ],
          [
            "@semantic-release/github",
            {
              "successComment": false,
              "failComment": false,
              "assets": [
                {
                  "path": "dist/packages/uuv-appium-*.tgz",
                  "label": "Npm Package"
                }
              ]
            }
          ]
        ]
      }
    }
  },
  "tags": []
}
