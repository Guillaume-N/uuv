{
  "name": "@uuv/appium-uiautomator2",
  "version": "0.9.0",
  "type": "commonjs",
  "author": "Louis Fredice NJAKO MOLOM (https://github.com/luifr10) & Stanley SERVICAL (https://github.com/stanlee974)",
  "description": "A solution to run E2E tests for mobile devices written in cucumber(BDD) with wdio, appium and uiautomator2.",
  "license": "MIT",
  "homepage": "https://orange-opensource.github.io/uuv/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Orange-OpenSource/uuv"
  },
  "bin": {
    "uuv": "bin/uuv"
  },
  "keywords": [
    "uuv",
    "e2e",
    "end2end",
    "end 2 end",
    "test",
    "testing",
    "accessibility",
    "accessibilite",
    "a11y",
    "cypress",
    "playwright",
    "testing-library",
    "cucumber",
    "gherkin",
    "bdd",
    "tdd",
    "acceptance",
    "appium",
    "uiautomator",
    "uiautomator2"
  ],
  "scripts": {
    "package": "npm pack --pack-destination=\"../../dist/packages\"",
    "postinstall": "node postinstall.js",
    "test": "ts-node test.ts",
    "lint": "eslint -c .eslintrc.json"
  },
  "dependencies": {
    "@wdio/appium-service": "^8.19.0",
    "@wdio/cli": "^8.19.0",
    "@wdio/cucumber-framework": "8.23.0",
    "@wdio/local-runner": "^8.19.0",
    "@wdio/spec-reporter": "^8.19.0",
    "appium": "^2.1.3",
    "appium-uiautomator2-driver": "^2.34.1",
    "chalk": "4.1.2",
    "eslint-plugin-wdio": "^8.8.7",
    "figlet": "1.6.0",
    "kill-port-process": "^3.2.0",
    "minimist": "1.2.8",
    "multiple-cucumber-html-reporter": "3.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist/cucumber/**/*",
    "dist/lib/**/*",
    "dist/index.d.ts",
    "dist/index.js",
    "bin/**/*",
    "postinstall.js",
    "target-config/**/*",
    "src/cucumber/step_definitions/generated/**/*",
    "*.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/minimist": "1.2.2",
    "@types/node": "16.18.50",
    "ts-loader": "9.4.2",
    "tsconfig-paths": "4.2.0"
  }
}
