{
  "name": "runner-appium-espresso",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/runner-appium-espresso/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/runner-appium-espresso",
        "commands": [
          "npx tsc -p tsconfig.lib.json --rootDir src --outDir dist"
        ]
      },
      "dependsOn": [
        "^build",
        "generate:step-definitions"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/runner-appium-espresso/src/**/*.{ts,js,feature}"],
        "fix": true,
        "eslintConfig": "packages/runner-appium-espresso/.eslintrc.json"
      }
    },
    "test:unit": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/runner-appium-espresso/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "commitMessage": "release(runner-appium-espresso): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "plugins": [
          [
            "@semantic-release/npm",
            {
              "npmPublish": false,
              "tarballDir": "dist/packages",
              "pkgRoot": "packages/runner-appium-espresso"
            }
          ],
          [
            "@semantic-release/github",
            {
              "successComment": false,
              "failComment": false,
              "assets": [
                {
                  "path": "dist/packages/uuv-appium-*.tgz",
                  "label": "Npm Package"
                }
              ]
            }
          ]
        ]
      }
    }
  },
  "tags": []
}
